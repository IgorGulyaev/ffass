<?xml version="1.0"?>
<config>
    <modules>
        <Bc_Brand>
            <version>0.1.0</version>
        </Bc_Brand>
    </modules>
    <frontend>
        <routers>
            <brand>
                <use>standard</use>
                <args>
                    <module>Bc_Brand</module>
                    <frontName>brand</frontName>
                </args>
            </brand>
        </routers>
        <layout>
            <updates>
                <brand>
                    <file>brand.xml</file>
                </brand>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <brand after="Mage_Adminhtml">Bc_Brand_Adminhtml</brand>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
		<acl>
			<resources>

                    <category_brand_setup>
                        <setup>
                            <module>Bc_Brand</module>
                            <class>Mage_Catalog_Model_Resource_Eav_Mysql4_Setup</class>
                        </setup>
                        <connection>
                            <use>core_setup</use>
                        </connection>
                    </category_brand_setup>
                    <category_brand_setup_write>
                        <connection>
                            <use>core_write</use>
                        </connection>
                    </category_brand_setup_write>
                    <category_brand_setup_read>
                        <connection>
                            <use>core_read</use>
                        </connection>
                    </category_brand_setup_read>

				<all>
					<title>Allow Everything</title>
				</all>
				<admin>
					<children>
						<Bc_Brand>
							<title>Brand Module</title>
							<sort_order>10</sort_order>
						</Bc_Brand>
					</children>
				</admin>
			</resources>
		</acl>
		<layout>
			<updates>
				<brand>
					<file>brand.xml</file>
				</brand>
			</updates>
		</layout>
    </adminhtml>   
    <global>
        <models>
            <brand>
                <class>Bc_Brand_Model</class>
                <resourceModel>brand_mysql4</resourceModel>
            </brand>
            <brand_mysql4>
                <class>Bc_Brand_Model_Mysql4</class>
                <entities>
                    <brand>
                        <table>brand</table>
                    </brand>
                </entities>
            </brand_mysql4>
        </models>
        <resources>
            <brand_setup>
                <setup>
                    <module>Bc_Brand</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </brand_setup>
            <brand_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </brand_write>
            <brand_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </brand_read>
        </resources>
        <blocks>
            <brand>
                <class>Bc_Brand_Block</class>
            </brand>
        </blocks>
        <helpers>
            <brand>
                <class>Bc_Brand_Helper</class>
            </brand>
        </helpers>
    </global>
</config>