<?xml version="1.0"?>
<config>
    <modules>
        <Zen_Accordeoncontent>
            <version>0.0.1</version>
        </Zen_Accordeoncontent>
    </modules>
    <frontend>
        <routers>
            <Zen_Accordeoncontent>
                <use>standard</use>
                <args>
                    <module>Zen_Accordeoncontent</module>
                    <frontName>accordeoncontent</frontName>
                </args>
            </Zen_Accordeoncontent>
        </routers>
    </frontend>
    <global>
        <blocks>
            <zen_accordeoncontent>
                <class>Zen_Accordeoncontent_Block</class>
            </zen_accordeoncontent>
        </blocks>
        <helpers>
            <zen_accordeoncontent>
                <class>Zen_Accordeoncontent_Helper</class>
            </zen_accordeoncontent>
        </helpers>
        <models>
            <zen_accordeoncontent>
                <class>Zen_Accordeoncontent_Model</class>
            </zen_accordeoncontent>
            <widget>
                <rewrite>
                    <widget_instance>Zen_Accordeoncontent_Model_Widget_Widget_Instance</widget_instance>
                </rewrite>
            </widget>
        </models>
        <events>
            <widget_widget_instance_save_before>
                <observers>
                    <zen_accordeoncontent>
                        <class>zen_accordeoncontent/observer</class>
                        <method>saveBefore</method>
                    </zen_accordeoncontent>
                </observers>
            </widget_widget_instance_save_before>
        </events>
    </global>
</config>