<config>
    <modules>
        <Ecomitize_Footernav>
            <version>0.1.0</version>
        </Ecomitize_Footernav>
    </modules>
    <global>
        <blocks>
            <ecomitize_footernav>
                <class>Ecomitize_Footernav_Block</class>
            </ecomitize_footernav>
            <catalog>
                <rewrite>
                    <product_list>Ecomitize_Footernav_Block_Product_List</product_list>
                </rewrite>
            </catalog>
        </blocks>
        <helpers>
            <ecomitize_footernav>
                <class>Ecomitize_Footernav_Helper</class>
            </ecomitize_footernav>
        </helpers>
        <models>
            <ecomitize_footernav>
                <class>Ecomitize_Footernav_Model</class>
            </ecomitize_footernav>
            <catalog>
                <rewrite>
                    <layer>Ecomitize_Footernav_Model_Layer</layer>
                </rewrite>
            </catalog>
            <catalog_resource>
                <rewrite>
                    <layer_filter_price>Ecomitize_Footernav_Model_Resource_Layer_Filter_Price</layer_filter_price>
                </rewrite>
            </catalog_resource>
        </models>
    </global>
    <frontend>
        <routers>
            <offers>
                <use>standard</use>
                <args>
                    <module>Ecomitize_Footernav</module>
                    <frontName>offers</frontName>
                </args>
            </offers>
        </routers>
        <layout>
            <updates>
                <ecomitize_footernav>
                    <file>ecomitize_footernav.xml</file>
                </ecomitize_footernav>
            </updates>
        </layout>
    </frontend>
</config>
