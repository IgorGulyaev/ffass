                    <?php echo $productRenderer->toHtml(); ?>
                <?php endforeach; ?>
            </div>
        </div>
    </div>
    <script type="text/javascript">
        jQuery(document).ready(function ($) {
            $('.new-product .owl-carousel').on(
                'initialized.owl.carousel resized.owl.carousel',
                function (e) {
                    checkOwlControls(e);
                }
            );
            $('.new-product .owl-carousel').owlCarousel({
                margin: 0,
                loop: true,
                nav: false,
                dots: false,
                responsive: {
                    0:{
                        items: 1
                    },
                    600:{
                        items: 2
                    },
                    960:{
                        items: 3
                    },
                    1200:{
                        items: 3
                    }
                }
            });
        });
