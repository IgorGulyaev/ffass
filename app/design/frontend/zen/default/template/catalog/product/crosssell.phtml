/**
 * Product cross sell items template
 *
 * 
 */
?>
<?php $_product = Mage::registry('current_product'); ?>
<?php $crossselll_product_collection = $_product->getCrossSellProducts(); ?>
<?php $productRenderer = $this->getChild('product_renderer'); ?>
<?php if ($this->getTitle()): ?><h3 class="section-title"><?php echo $this->getTitle(); ?></h3><?php endif; ?>
<div class="carousel">
    <a href="#" class="carousel-controls prev"><i class="icon-left2"></i></a>
    <a href="#" class="carousel-controls next"><i class="icon-right2"></i></a>
    <div class="owl-carousel">
        <?php foreach ($crossselll_product_collection as $_item): ?>
            <div class="item">
		<?php $crossselll_product = Mage::getModel('catalog/product')->load($_item->getId()) ?>
                <?php $productRenderer->setProduct($crossselll_product); ?>
                <?php echo $productRenderer->toHtml(); ?>
            </div>
        <?php endforeach ?>
    </div>
</div>
