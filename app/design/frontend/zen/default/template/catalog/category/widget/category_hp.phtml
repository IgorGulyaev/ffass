<?php
$catId                  = $this->getCatId();
$_category              = Mage::getModel('catalog/category')->load($catId);
$name                   = $_category->getName();
$image                  = $_category->getThumbnail();
$categoryDescription    = $_category->getCategoryShortDescription();
$url                    = $_category->getUrl();
?>
<div class="hp-cat col-xs-6">
    <div class="row">
        <div class="col-xs-12 col-sm-6">
            <a href="<?php echo $_category->getUrl(); ?>" class="image" >
                <img src="<?php echo $this->getUrl('media/catalog/category/'); ?><?php echo $image ?>" alt="<?php echo $this->htmlEscape($_category->getName()) ?>" >
                <span class="img-label"><span><?php echo $name ?></span></span>
            </a>
        </div>
        <div class="col-sm-6 hidden-xs">
            <a href="<?php echo $_category->getUrl(); ?>">
                <h3><?php echo $name ?></h3>
            </a>
            <p <?php if(strlen($categoryDescription) > 150):?>class="ellipsis"<?php endif; ?>><?php
                if(strlen($categoryDescription) > 150) {
                    $in = substr($categoryDescription, 0, strpos(wordwrap($categoryDescription, 150), "\n"));
                    $out = strlen($in) > 150 ? substr($in, 0, 150) . "..." : $in;
                    echo $out;
                } else {
                    echo $categoryDescription;
                } ?></p>
            <a href="<?php echo $url ?>" class="button"><?php echo $this->__('Shop now >') ?></a>
        </div>
    </div>
</div>
